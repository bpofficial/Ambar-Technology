{
    "compilerOptions": {
        "outDir": "../../../Build/Production",
        "sourceMap": true,
        "removeComments": true,
        "allowJs": false,
        "moduleResolution": "node",
        "module": "commonjs",
        "target": "es6",
        "jsx": "react",
        "allowSyntheticDefaultImports": true,
        "lib": ["es5", "es6", "es7", "es2017", "dom"],
        "declaration": true,
        "declarationDir": "../../../Build/Production/Types",
        "forceConsistentCasingInFileNames": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "suppressImplicitAnyIndexErrors": true,
        "noUnusedLocals": true,
        "rootDirs": ["../../src"]
    },
    "include": [
        "../../src/**/*"
    ],
    "exclude": [
        "../../node_modules/",
        "../../config/"
    ]
}