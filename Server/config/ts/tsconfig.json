{
    "compilerOptions": {
        "outDir": "../../../Build/Development/Types",
        "sourceMap": true,
        "removeComments": true,
        "allowJs": true,
        "moduleResolution": "node",
        "module": "commonjs",
        "target": "es2016",
        "allowSyntheticDefaultImports": true,
        "lib": [
            "es5",
            "es6",
            "es7",
            "es2017",
            "es2016",
            "esnext.asynciterable"
        ],
        "declaration": true,
        "declarationDir": "../../../Build/Development/Types",
        "forceConsistentCasingInFileNames": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "suppressImplicitAnyIndexErrors": true,
        "noUnusedLocals": true,
        "rootDirs": [
            "../../src"
        ],
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true
    },
    "include": [
        "../../src/**/*"
    ],
    "exclude": [
        "../../node_modules/",
        "../../config/"
    ]
}