{
    "compilerOptions": {
        "sourceMap": true,
        "removeComments": true,
        "allowJs": true,
        "moduleResolution": "node",
        "module": "commonjs",
        "target": "es6",
        "types": [
            "jest"
        ],
        "allowSyntheticDefaultImports": true,
        "lib": [
            "es5",
            "es6",
            "es7",
            "es2017",
            "es2016",
            "es2015"
        ],
        "rootDirs": [
            "../../src"
        ],
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true
    },
    "include": [
        "../../src/**/*"
    ],
    "exclude": [
        "../../node_modules/",
        "../../config/",
        "../../src/**/__tests__/*"
    ]
}